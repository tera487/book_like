<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
    <%= form_with(model: current_user.relationships.find_by(follow_id: @user.id),url: users_relationship_path(@user.id),method: :delete) do |f| %>
      <%= f.hidden_field :follow_id, value:@user.id %>
      <%= f.submit 'フォロー中', class: 'btn btn-outline-primary btn-block' %>
    <% end %>
  <% else %>

    <%= form_with(model: current_user.relationships.build, url: :users_relationships ) do |f| %>
      <%= f.hidden_field :follow_id, value:@user.id %>
      <%= f.submit 'フォロー', class: 'btn btn-outline-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>