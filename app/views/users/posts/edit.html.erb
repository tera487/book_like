<div class="container-sm">
  <div class="d-flex justify-content-between">
    <div class="main_title">
      <h2>投稿</h2>
    </div>

    <div >
      <%= link_to "戻る",  users_post_path(current_user),class: "btn back_button" %>
    </div>
  </div>

  <div class="d-flex justify-content-between book_container">
    <div class="d-flex m-1", style="flex:1;">
      <div>
        <%= link_to image_tag(@post.book.image_url),@post.book.url %>
      </div>
      <div class="book_title">
        <div ><%= @post.book.title %></div>
        <div class= "book_author"><%= @post.book.author %></div>
      </div>

    </div>

    <div style="width:100px;">
    </div>
  </div>

  <div>
    <%= form_with model: @post, url: users_post_path(@post), local: true do |f| %>

      <div>
        <%= f.label :content, "感想" %><br>
        <%= f.text_area :content,rows: 6, class: "text_content" %>
      </div>

      <div>
        <%=  f.submit "投稿", class:"btn" %>
      </div>
    <% end %>



  </div>

</div>