<div class="container-sm ">
  <div class="main_title">
    <h2>みんなの投稿</h2>
  </div>

  <div class="main-wrapper">
    <div class="main_content">
    
      <% @posts.each do |p|%>
        <div class="post_wrapper">
          <h2 class="title"><%= link_to p.title, p %></h2>
          <p class="date"><%= p.created_at.strftime("%Y 年, %m 月, %d 日" ) %> </p>
          <p class="user"><%= link_to  p.user.name, user_path(p.user_id) %> </p>
        </div>

      <% end %>

    
    </div>

    <div class="sidebar">
    
    </div>
  </div>

</div>