<header>
  <div class="d-flex justify-content-between bd-navbar">
    <div class="d-flex">
      <% if user_signed_in?%>
        <h2><%= link_to "Book Like", :users_root, class: "logo" %></h2>
      <% else %>
        <h2><%= link_to "Book Like", :root, class: "logo" %></h2>
      <% end %>
      <%= render "users/shared/flash"  %>
    </div>
    
    <% if user_signed_in? %>
      <div class="d-sm-none">
        <div class="menu-trigger" >
          <span></span>
          <span></span>
          <span></span>
        </div>
        <div class="drawer">
          <ul>
            <li><%= link_to "home", :users_root, style:"padding:20px;" %> </li>
            <li><%= link_to "本を探す", :search_users_books %> </li>
            <li><%= link_to  "マイページ", users_user_path(current_user) %></li>
            <li><%= link_to "ログアウト", :destroy_user_session, method: :delete %></li>
          </ul>
        </div>
        <div class="overlay"></div>
      </div>
      
    <% end %>


    <% if user_signed_in? %>
      <div class="d-none d-sm-block">
        <%= link_to "home", :users_root, class: "btn" %> 
        <%= link_to "本を探す", :search_users_books, class: "btn" %> 
        <%= link_to  "マイページ", users_user_path(current_user), class: "btn" %>
        <%= link_to "ログアウト", :destroy_user_session, method: :delete, class: "btn" %>
      </div>
      
    <% elsif  current_page?(:new_user_session) %>
      <div>
        <%= link_to "Admin", :new_admin_session, class: "btn" %>
        <%= link_to "戻る", :root, class: "btn" %>
      </div>

    <% else %>
      <div>
        <%= link_to "ログイン", :new_user_session, class: "btn " %>
      </div>
      
    <% end %>

  </div>

</header>

