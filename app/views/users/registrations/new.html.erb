<div class="devise_wrapper d-flex align-items-center">

  <div class="container-sm text-center align-items-center">
    <div class="herder_flash d-sm-none" >
      <%= content_tag(:span, flash.notice, class: "notice") if flash.notice%>
      <%= content_tag(:span, flash.alert, class: "alert") if flash.alert%>
    </div>

    <div class="devise_title">
      <h2>アカウントの新規作成</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field", style="text-align: center">
        <div style="margin-bottom:10px;">プロフィール画像</div>
        <%= f.label :avatar do%>
          <% if @user.avatar.attached? %>
            <%= image_tag(rails_blob_path(@user.avatar),:size => "80x80", class:"icon") %>
          <% else %>
            <%= image_tag("default.png", :size => "80x80", class:"icon") %>
          <% end %>
        <% end %>  
        
        <br />
        <%= f.file_field :avatar%>
      </div>


      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        (最小文字数<%= @minimum_password_length %>)
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>


  </div>
</div>