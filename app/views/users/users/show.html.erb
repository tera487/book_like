<div class="container-sm ">
  <div class="d-flex justify-content-between">
    <div class="profile_container d-flex">
      <div>
        <% if @user.avatar.attached? %>
          <%= image_tag(rails_blob_path(@user.avatar),:size => "60x60", class:"icon") %>
        <% else %>
          <%= image_tag("default.png", :size => "60x60", class:"icon") %>
        <% end %>
      </div>

      <div class="profile_name">
        <%= @user.name %>
      </div>
    </div>
    <div>
      <%= link_to "アカウント設定",  :edit_user_registration,class: "btn back_button" %>
    </div>

  </div>
  
  <div class="main_title">
    <h2>最近の投稿</h2>
  </div>

  <div class="main-wrapper">
    <div class="main_content">
    
      <% @posts.each do |p|%>
        <div class="post_wrapper">
          <p class="date"><%= p.created_at.strftime("%Y 年, %m 月, %d 日" ) %> </p>
          <p class="user"><%= link_to  p.user.name, users_user_path(p.user_id) %> </p>
        </div>

      <% end %>

    
    </div>

    <div class="sidebar">
    
    </div>
  </div>

</div>