<div class="container-sm ">
  <div class="d-flex justify-content-between">
    <div class="profile_container d-flex">
      <div>
        <% if @user.avatar.attached? %>
          <%= image_tag(rails_blob_path(@user.avatar),:size => "60x60", class:"icon") %>
        <% else %>
          <%= image_tag("default.png", :size => "60x60", class:"icon") %>
        <% end %>
      </div>

      <div class="profile_name">
        <%= @user.name %>
      </div>
    </div>

    <% if user_signed_in? && @user == current_user %>
      <div>
        <%= link_to "アカウント設定",  :edit_user_registration,class: "btn back_button" %>
      </div>
    <% else %>
      <%= render "users/relationships/follow_button" %>
    <% end %>
    

  </div>
  
  <div class="main_title">
    <h2>最近の投稿</h2>
  </div>

  <%= render "users/shared/post_list" %>

</div>